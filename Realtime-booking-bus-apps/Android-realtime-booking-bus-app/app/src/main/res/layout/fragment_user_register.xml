<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alifdeltaforce.realtimebooking.UserRegisterFragment">


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_txt_userName"
            android:hint="Name"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorHint"
            android:drawableLeft="@mipmap/ic_user_name"
            android:textAlignment="center"
            android:background="@drawable/round_text"
            android:layout_width="330dp"
            android:layout_height="50dp" />


        <EditText
            android:id="@+id/edt_txt_dateTime"
            android:textColorHint="@color/colorHint"
            android:textColor="@color/colorText"
            android:layout_marginTop="10dp"
            android:hint="Birth"
            android:inputType="date"
            android:drawableLeft="@mipmap/ic_user_date"
            android:textAlignment="center"
            android:background="@drawable/round_text"
            android:layout_width="330dp"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/edt_txt_phoneNum"
            android:textColorHint="@color/colorHint"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorText"
            android:drawableLeft="@mipmap/ic_rdit_phone"
            android:hint=" Phone Number"
            android:inputType="number"
            android:background="@drawable/round_text"
            android:layout_width="330dp"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/edt_txt_passWord"
            android:textColorHint="@color/colorHint"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/ic_edit_pass"
            android:textColor="@color/colorText"
            android:hint=" Password"
            android:inputType="textPassword"
            android:background="@drawable/round_text"
            android:layout_width="330dp"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/edt_txt_conPass"
            android:textColorHint="@color/colorHint"
            android:textColor="@color/colorText"
            android:textAlignment="center"
            android:hint="Confirm Pass"
            android:inputType="textPassword"
            android:drawableLeft="@mipmap/ic_user_con"
            android:layout_width="330dp"
            android:background="@drawable/round_text"
            android:layout_marginTop="10dp"
            android:layout_height="50dp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/group_radio_button"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorHint"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorHint"
                android:text="Female" />
        </RadioGroup>

        <Button
            android:id="@+id/button_register"
            android:layout_marginTop="15dp"
            android:layout_width="330dp"
            android:text="REGISTER"
            android:textColor="@color/colorText"
            android:background="@drawable/s_bg_button_green"
            android:layout_height="wrap_content" />


    </LinearLayout>

</FrameLayout>
